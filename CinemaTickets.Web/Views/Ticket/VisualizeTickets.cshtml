
@{
    ViewBag.Title = "VisualizeTickets";
}

<h2>Tickets</h2>
<hr />

<div id="tickets">
    @foreach (KeyValuePair<CinemaTickets.DataModel.Models.Ticket,int[]> item in Model)
    {
        <div id="ticket" style="border:1px solid black;margin-bottom:10px;padding:15px;">
            <h4 style="text-align:center;">Cinema world</h4>
            <p id="movieTitle"><b>Movie title</b> - @Session["movieTitle"]</p>
            <p id="ticketPrice"><b>Ticket price</b> - @item.Key.Price</p>
            <p id="date"><b>Date</b> - @Session["ticketDate"]</p>
            <p id="time"><b>Hour</b> - @Session["ticketHour"]</p>
            <p id="hallNumber"><b>Hall number</b> - @Session["hallNumber"]</p>
            <p id="seat"><b>Row</b> - @item.Value[0]  <b>Column</b> - @item.Value[1]</p>
            <p><b>Ticket ID</b> - @item.Key.TicketID</p>
        </div>
    }
</div>